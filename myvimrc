for i in range(char2nr('a'), char2nr('z'))
    let i = nr2char(i)
    exec "set <M-".i.">=\<Esc>".i
    exec "inoremap \<Esc>".i." <M-".i.">"
endfor

for i in range(char2nr('0'), char2nr('9'))
    let i = nr2char(i)
    exec "set <M-".i.">=\<Esc>".i
    exec "inoremap \<Esc>".i." <M-".i.">"
endfor
